{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "JupyterLab",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "jupyter",
            "cmd": "jupyter",
            "args": true
          },
          {
            "name": "python",
            "cmd": "python",
            "args": true
          }
        ]
      },
      "clipboard": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://blog.jupyter.org/feed"]
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "rs.jupyterlab.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "JupyterLab",
        "width": 1000,
        "height": 800,
        "transparent": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  }
}
